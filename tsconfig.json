{
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@root/*": ["../*"],
    },
    "target": "es6",
    "outDir": "dist",
    "jsx": "react",
    "removeComments": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/@figma"
    ]
  }
}